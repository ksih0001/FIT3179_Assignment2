{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Road Accident Deaths by State in Malaysia",
    "fontSize": 30,
    "anchor": "start",
    "color": "#333"
  },
  "width": 1000,
  "height": 600,
  "params": [
    {
      "name": "year_selection",
      "value": 2019,
      "bind": {
        "input": "select",
        "options": [2003, 2004, 2005, 2006, 2007, 2008, 2009, 2010, 2011, 2012, 2013, 2014, 2015, 2016, 2017, 2018, 2019, 2020, 2021],
        "labels": ["2003", "2004", "2005", "2006", "2007", "2008", "2009", "2010", "2011", "2012", "2013", "2014", "2015", "2016", "2017", "2018", "2019", "2020", "2021"],
        "name": "Select Year: "
      }
    }
  ],
  "data": {
    "url": "data/Total Death by State.csv"
  },
  "transform": [
    {
      "fold": ["2003", "2004", "2005", "2006", "2007", "2008", "2009", "2010", "2011", "2012", "2013", "2014", "2015", "2016", "2017", "2018", "2019", "2020", "2021"],
      "as": ["Year", "Deaths"]
    },
    {
      "calculate": "parseInt(datum.Year)",
      "as": "YearInt"
    },
    {
      "calculate": "isValid(datum.Deaths) ? parseInt(replace(datum.Deaths + '', ',', '')) : 0",
      "as": "DeathsInt"
    },
    {
      "filter": "datum.DeathsInt > 0"
    },
    {
      "filter": "datum.YearInt == year_selection"
    },
    {
      "calculate": "datum.State == 'W.P. KUALA LUMPUR' ? 'Kuala Lumpur' : datum.State",
      "as": "StateName"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "bar",
        "color": "#e74c3c",
        "stroke": "#c0392b",
        "strokeWidth": 1,
        "cornerRadiusTopLeft": 3,
        "cornerRadiusTopRight": 3
      },
      "encoding": {
        "x": {
          "field": "StateName",
          "type": "nominal",
          "sort": "-y",
          "axis": {
            "title": "State",
            "labelAngle": -45,
            "labelFontSize": 10
          }
        },
        "y": {
          "field": "DeathsInt",
          "type": "quantitative",
          "axis": {
            "title": "Number of Deaths",
            "grid": true,
            "gridOpacity": 0.3
          }
        },
        "tooltip": [
          {"field": "StateName", "type": "nominal", "title": "State"},
          {"field": "DeathsInt", "type": "quantitative", "title": "Deaths", "format": ","},
          {"field": "YearInt", "type": "quantitative", "title": "Year"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "bottom",
        "dy": -5,
        "fontSize": 9,
        "fontWeight": "bold",
        "color": "#2c3e50"
      },
      "encoding": {
        "x": {
          "field": "StateName",
          "type": "nominal",
          "sort": "-y"
        },
        "y": {
          "field": "DeathsInt",
          "type": "quantitative"
        },
        "text": {
          "field": "DeathsInt",
          "type": "quantitative",
          "format": ","
        }
      }
    },
    {
      "transform": [
        {
          "aggregate": [{"op": "max", "field": "DeathsInt", "as": "maxDeaths"}],
          "groupby": []
        },
        {
          "calculate": "'Highest Death Count: ' + format(datum.maxDeaths, ',') + ' deaths'",
          "as": "maxLabel"
        }
      ],
      "layer": [
        {
          "mark": {
            "type": "rect",
            "width": 280,
            "height": 40,
            "fill": "#3498db",
            "fillOpacity": 0.15,
            "stroke": "#2980b9",
            "strokeWidth": 1.5,
            "cornerRadius": 5,
            "x": 500,
            "y": 110
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "center",
            "baseline": "middle",
            "x": 500,
            "y": 110,
            "fontSize": 15,
            "fontWeight": "bold",
            "color": "#2980b9"
          },
          "encoding": {
            "text": {"field": "maxLabel", "type": "nominal"}
          }
        }
      ]
    }
  ]
}